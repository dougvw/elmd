<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">

<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>EricLarson2010</title>

  <!-- Framework CSS -->
    <link rel="stylesheet" href="/stylesheets/blueprint/screen.css" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="/stylesheets/blueprint/print.css" type="text/css" media="print">
    <!--[if lt IE 8]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->

    <!-- Import fancy-type plugin for the sample page. -->
    <link rel="stylesheet" href="/stylesheets/blueprint/plugins/fancy-type/screen.css" type="text/css" media="screen, projection">
  <%= stylesheet_link_tag 'main', 'main' %>
  <%= javascript_include_tag :defaults %>
  <% if controller.controller_name == "issues" %>
  	<%= javascript_include_tag "ckeditor/ckeditor" %>
  <% end %>
</head>

<body>
	<div class="container showgrid">
		<div class="span-24 header"></div>
		<div id="nav_titles" class="span-24 navigation">
			<div class = "span-21 prepend-2 last">
			<ul>
				<li><%= link_to "Home", root_path, :style  => "padding-left: 39px;" %></li>
				<li><%= link_to "About", about_path, :style  => "padding-left: 14px;" %></li>
				<li><%= link_to "Issues", the_issues_path, :style  => "padding-left: 20px;" %></li>
				<li><%= link_to "Volunteer", new_volunteer_path %></li>
				<li><%= link_to "Contact", root_path, :style  => "padding-left: 30px;" %></li>
				<li><%= link_to "Contribute", root_path, :style  => "padding-left: 3px;" %></li>
			</ul>
			</div>
		</div>
		<div class="span-24 sub-header"></div>
		
		<div class="span-24 content_bg">   <!-- content start -->
		<div id="content" class="span-20 prepend-2 append-2">
			<!-- <ul>
			       		<% if current_user %>
			       			<li><%= link_to "Admin", admin_path %></li>
			       			<li><%= link_to "Logout", logout_path %></li>
			       		<% else -%>
			       			<li><%= link_to "Login", login_path %></li>
			       			<% end %>
					</ul> -->

			<div class="span-20 last">
				<% if flash[:notice] %><div class="success"><%= flash[:notice] %></div> <% end %>
				<% if flash[:error] %><div class="error"><%= flash[:error] %></div> <% end %>
				<% if flash[:info] %><div class="notice"><%= flash[:info] %></div> <% end %>
			</div>  
		
			<%= yield %>
		</div>
		</div>  <!-- content end -->
		
		<div class="span-24 footer"> <!-- start footer -->
			<% form_for(@recipient = Recipient.new) do |f| %>
  				<%= f.error_messages %>
				<div id="facebook" class="span-1  prepend-8"><img src="/images/facebook.png">
				</div>
				<div id="twitter" class="span-1"><img src="/images/twitter.png">
				</div>
				<div id="email_form" class="span-10 prepend-3">
			    <%= f.text_field :email, :size => 15 %>
			    <%= f.text_field :zip, :size => 6 %>
				<%= f.submit 'Add Me to the List' %></div>
			<% end %>
		</div>  <!-- end footer -->
	</div>  <!-- end container -->
</body>
</html>