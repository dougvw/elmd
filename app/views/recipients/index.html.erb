<h1>Mailing List</h1>

<table>
	<tr>
		<th>First</th>
	 	<th>Last</th>
		<th>Email</th>
		<th>Address</th>
		<th></th>
		<th></th>
		<th>Active</th>
		<th>Destroy</th>
	</tr>
	
<% @recipients.each do |recipient| %>
  <tr>
	<td><%= link_to recipient.first_name, edit_recipient_path(recipient) %></td>
 	<td><%= link_to recipient.last_name, edit_recipient_path(recipient) %></td>
	<td><%= mail_to recipient.email, recipient.email %></td>
    <td><%= link_to recipient.address_line1, edit_recipient_path(recipient) %></td>
	<td><%= link_to recipient.address_line2, edit_recipient_path(recipient) if recipient.address_line2 %></td>
	<td><%= link_to (recipient.city + " , " + recipient.state + " " + recipient.zip), edit_recipient_path(recipient) %></td>
	<td><% if recipient.active? %>
		Active
		<% else %>
		<% end %></td>
    <td><%= link_to 'Destroy', recipient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<br>
<%= link_to 'Export Mailing List', recipients_path + ".csv"%>
