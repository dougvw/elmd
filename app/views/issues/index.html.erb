<h1>Listing issues</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Active</th>
	<th>Order Number</th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%=h issue.title %></td>
    <td><%=h truncate(issue.body) %></td>
    <td><%=h issue.active %></td>
	<td><%= h issue.order_number %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New issue', new_issue_path %>